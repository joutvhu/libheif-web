{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": true,
    "declaration": false,
    "sourceMap": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es2015",
    "module": "es2015",
    "lib": [
      "es2016",
      "es2017",
      "es2018",
      "esnext",
      "dom"
    ],
    "paths": {
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
